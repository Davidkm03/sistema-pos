# ==========================================
# CONFIGURACIÓN SEGURA PARA PRODUCCIÓN
# ==========================================
# IMPORTANTE: Copia este archivo a .env y configura con tus valores reales
# NO COMMITEAR .env al repositorio

# ==========================================
# APLICACIÓN
# ==========================================
APP_NAME="Sistema POS"
APP_ENV=production
APP_KEY=  # Ejecutar: php artisan key:generate
APP_DEBUG=false  # SIEMPRE false en producción
APP_URL=https://tu-dominio.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_MX

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

# Hashing más fuerte para contraseñas
BCRYPT_ROUNDS=14

# ==========================================
# LOGGING
# ==========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning  # En producción: warning o error

# ==========================================
# BASE DE DATOS
# ==========================================
# IMPORTANTE: Usar MySQL/PostgreSQL en producción, NO SQLite
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nombre_base_datos
DB_USERNAME=usuario_bd
DB_PASSWORD=contraseña_segura_aquí

# ==========================================
# SESIONES (CONFIGURACIÓN SEGURA)
# ==========================================
SESSION_DRIVER=database  # Usar database o redis en producción
SESSION_LIFETIME=30  # 30 minutos de inactividad
SESSION_ENCRYPT=true  # SIEMPRE true en producción
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true  # true si usas HTTPS (recomendado)
SESSION_HTTP_ONLY=true  # Previene acceso desde JavaScript
SESSION_SAME_SITE=lax  # Protección CSRF adicional

# ==========================================
# BROADCASTING
# ==========================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# ==========================================
# CACHE
# ==========================================
CACHE_STORE=database
# CACHE_PREFIX=pos_

# ==========================================
# MEMCACHED
# ==========================================
MEMCACHED_HOST=127.0.0.1

# ==========================================
# REDIS
# ==========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==========================================
# CORREO
# ==========================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io  # Cambiar por tu servidor SMTP
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@tu-dominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================
# AWS S3 (Opcional para almacenamiento)
# ==========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==========================================
# VITE
# ==========================================
VITE_APP_NAME="${APP_NAME}"

# ==========================================
# CONFIGURACIÓN ADICIONAL DE SEGURIDAD
# ==========================================
# Forzar HTTPS
# FORCE_HTTPS=true

# Tiempo de expiración de contraseñas (días)
# PASSWORD_TIMEOUT=10800

# Intentos máximos de login antes de bloqueo
# LOGIN_MAX_ATTEMPTS=5
# LOGIN_DECAY_MINUTES=1

# ==========================================
# NOTAS IMPORTANTES
# ==========================================
# 1. Generar APP_KEY: php artisan key:generate
# 2. Configurar permisos: chmod 600 .env
# 3. Crear base de datos antes de migrar
# 4. Ejecutar migraciones: php artisan migrate --seed
# 5. Configurar certificado SSL/TLS
# 6. Configurar backups automáticos
# 7. Configurar firewall en servidor
# 8. Revisar logs regularmente: storage/logs/
